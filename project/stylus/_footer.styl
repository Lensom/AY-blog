.footer
  text-align center
  background-color $main
  &-contact
    background-color $white
  &-top
    padding 10px 0
    .header-item
      a
        color $white
        &:hover
          text-decoration underline
  &-copyright
    font-size 12px
    color $white
    padding-bottom 10px
  &-author
    padding 5px 0
    font-size 14px
    background-color $white

.form
  max-width 320px
  &-group
    margin-top 20px
  &-input
    border 2px solid $main
    border-radius 6px
    width 100%
    padding 10px 15px
    font-size 16px
    box-sizing content-box
    &:focus
      border-color $black
  &-text 
    width 100%

.contact
  &-form
    display flex
    justify-content space-between